	int arroz = 3000;
	int camisa = 30000;
	int computador = 2000000;
	switch(nombre) {
	
	case("arroz"):
		
		int sumatoria =  cantidad * arroz;
	    if( pagar < sumatoria ) {
	    	System.out.println("No tienes suficiente dinero "+ pagar + " La cantidad es de: "+ sumatoria);
	    }else {
	    	
	      	System.out.println("La compra ha sido exitosa: "+ nombre + " precio; "+ sumatoria);
	    	
	    }
		
		
	break;
	case("camisa"):
		
		break;
	case("computador"):
		
		break;
	}
	

	}

}
