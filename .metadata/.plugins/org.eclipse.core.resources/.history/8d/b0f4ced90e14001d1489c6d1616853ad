package trimestre3;
import java.util.Scanner;

public class PromedioNotas {
	
	public static void main(String[] args) {
				
			double notas = 3;
			double item = 0;
			
			double cantidad = 0;
			while(item < notas) {
				Scanner read= new Scanner(System.in);
				System.out.println("Ingrese la tota");
				double note = read.nextDouble();
				cantidad = cantidad + note;
				
				item++;
			}
			
			double  result = cantidad / item;
			if(result > 30) {
				
				System.out.println("Gano la nota en:  " + result + "❤️😊");
			}else {
				System.out.println("Perdio la nota en:  " + result + "😭");
			}
		
	}
	
	

}
